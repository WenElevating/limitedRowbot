# LLM Provider Configuration
# Supported providers: openai, glm
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# GLM (智谱 AI) Configuration
GLM_API_KEY=your-glm-api-key-here
GLM_API_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# Model Selection
# OpenAI models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# GLM models: glm-4-plus, glm-4-0520, glm-4, glm-4-air, glm-4-airx, glm-4-flash, glm-4-long, glm-3-turbo
LLM_MODEL=gpt-4o

# GLM Model (if using GLM provider)
GLM_MODEL=glm-4-flash

# Robot Configuration
ROBOT_LOG_DIR=./logs
ROBOT_BACKUP_DIR=./.robot-backups
ROBOT_AUTO_APPROVE_READ=false
ROBOT_AUTO_APPROVE_MODIFY=false
